/*
 * Styles elements which are common to all pages
 */

#wrapper
	background-image url("/images/structure/illustration.png")
	background-position 100% 0
	background-repeat no-repeat
	background-attachment fixed
	overflow auto

#container
	// max-width 920px
	width 920px
	padding 40px 20px
	margin 40px auto 0

#main-header
	padding-bottom $baseLineHeight
	margin-bottom $baseLineHeight*2
	border-bottom 7px solid #000
	h1
		height 60px
		margin 0
		a
			float right
			text-align left
			width 153px
			min-height 60px
			display block
			text-indent -9999px
			overflow hidden
			margin 0
			background url("/images/structure/logo-clock.png") 0 0 no-repeat
			background-size 100% auto
	h2
		margin-bottom 0
		text-align right

	.general &
		margin-bottom $baseLineHeight
		h1
			height auto
			margin-bottom $baseLineHeight
			a
				float none
				width 306px
				min-height 98px
				display block
				text-indent -9999px
				overflow hidden
				margin 0 auto
				background url("/images/structure/logo-clock.png") 0 0 no-repeat
		h2
			text-align center

#main-navigation
	position fixed
	top 0
	left 0
	width 100%
	background-color #000
	z-index 10
	ul
		width 940px
		padding 0 10px
		margin 0 auto
		li
			position relative
			display inline-block
			margin 3px 5px 3px
			a
				display block
				font(#fff, 24px, 1em)
				line-height 1em
				font-family "GothamDemiCondensed",Arial,Helvetica,sans-serif
				text-decoration none
				padding 3px 5px
				border-radius 2px
				text-rendering: optimizeLegibility;
				&:hover
					color #000
					background-color $secondaryColor
	.sub-nav
		display none
		position absolute
		top 100%
		left -5px
		background-color #000
		margin 0
		padding 0 5px 5px
		width auto
		border-radius 0 0 3px 3px
		li
			display block
			margin 0
			padding 0
			a
				display block
				white-space nowrap
				font-size 15px
				line-height 25px
				margin 0
				margin-top 4px
				padding 5px 8px
				font-family Georgia, serif
				font-style italic

	li:hover .sub-nav
		display block

#main-content
	article
		position relative
		float left
		width 100%
		border-bottom 4px solid $baseBorderColor
		padding-bottom $baseLineHeight
		margin-bottom $baseLineHeight * 2

	section
		clear left
		float left
		width 100%
		border-bottom 1px solid #000
		margin-top -60px
		padding-top 60px
		margin-bottom 30px
		padding-bottom 10px

	section:last-child
		padding-bottom 0
		border-bottom 0

	h1
		position absolute
		top -198px
		left 0
		font-size 130px
		line-height 130px