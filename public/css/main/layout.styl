/*
 * Styles elements which are common to all pages
 */

#wrapper
	background-image url("/images/structure/illustration.png")
	background-position 100% 0
	background-repeat no-repeat
	background-attachment fixed
	overflow auto

#container
	// max-width 920px
	width 920px
	padding 40px 20px
	margin 0 auto

#main-header
	text-align center
	margin-bottom $baseLineHeight
	h1
		a
			width 306px
			min-height 98px
			display block
			text-indent -9999px
			overflow hidden
			margin 0 auto
			background url("/images/structure/logo-clock.png") 0 0 no-repeat
	h2
		margin-bottom 0

#main-navigation
	height 42px
	margin-bottom $baseLineHeight
	width inherit
	ul
		width inherit
		border-top 2px solid $baseBorderColor
		border-bottom 4px solid $baseBorderColor
		z-index 10
		background-color #b7e2e9
		li
			display inline-block
			margin 3px 5px 3px
			a
				display block
				color $baseFontColor
				font(#000, 24px, 1em)
				line-height 1em
				font-family "GothamDemiCondensed",Arial,Helvetica,sans-serif
				text-decoration none
				padding 3px 5px
				border-radius 3px
				text-rendering: optimizeLegibility;
				&:hover
					color #000
					background-color $secondaryColor
		&.fixed
			position fixed
			top 0
			left auto

#main-content > section
	float left
	width 100%
	border-bottom 4px solid $baseBorderColor
	padding-bottom $baseLineHeight
	margin-bottom $baseLineHeight * 2

	h2
		clear both
		border-top 1px solid rgba(0,0,0,.3)
		padding-top $baseLineHeight

