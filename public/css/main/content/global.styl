/**************************************
 * CSS
 */

@font-face
	font-family 'LavanderiaRegular'
	src url('/fonts/lavanderia_regular-webfont.eot')
	src url('/fonts/lavanderia_regular-webfont.eot?#iefix') format('embedded-opentype'),url('/fonts/lavanderia_regular-webfont.woff') format('woff'),url('/fonts/lavanderia_regular-webfont.ttf') format('truetype'),url('/fonts/lavanderia_regular-webfont.svg#LavanderiaRegular') format('svg')
	font-weight normal
	font-style normal

.font-face
	font-family "LavanderiaRegular"
	font-size 200px
	line-height 130px
	letter-spacing 10px
	position relative
	left -40px
	font-style italic

.callout
	position relative
	text-shadow 0px 1px 2px $secondaryColor
	&::after
		content ""
		position absolute
		top -65px
		left 0
		margin -30px
		padding 30px
		width 260px
		height 260px
		background-color $secondaryColor
		border-radius 50%
		z-index 0
	p
		position relative
		z-index 1