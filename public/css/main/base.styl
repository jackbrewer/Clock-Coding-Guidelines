/*-------------------------------------------------
 *
 * base.css
 *
 * Use this file to reset default values for the site
 *
*/

::selection
	color #fff
	background-color $secondaryColor
	text-shadow none
::-moz-selection
	color #fff
	background-color $secondaryColor
	text-shadow none

body
	margin 0
	padding 0
	background-image: url("/images/structure/blue-bg.png");
	background-position: 50% 0px;
	background-repeat no-repeat
	background-attachment: fixed
	background-color #fff

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
	display block
	margin 0
	padding 0

/* reset padding and margin for these elements - remove any that are unused */
body, dl, dt, dd, li, pre, code, form, fieldset, legend, input, button, textarea, blockquote, th, td
	margin 0
	padding 0

h1, h2, h3, h4, h5, h6, p, ul, ol, pre, dt, hr, address, table, label
	margin 0 0 $baseLineHeight
	padding 0

/** Typography **/

@font-face
	font-family 'GothamDemiCondensed'
	src: url('/fonts/franklingothicdemicondensed-webfont.eot') format('eot'), url('/fonts/franklingothicdemicondensed-webfont.woff') format('woff'), url('/fonts/franklingothicdemicondensed-webfont.ttf')  format('truetype'), url('/fonts/franklingothicdemicondensed-webfont.svg#DIN-Bold') format('svg')
	font-weight normal
	font-style normal

body, input, button, textarea, select
	font()
	font-style italic

h1, h2, h3, h4, h5, h6
	font(#000, 40px, 1em)
	color #000
	line-height 1em
	font-family "GothamDemiCondensed",Arial,Helvetica,sans-serif
	letter-spacing: -1px;
	text-rendering: optimizeLegibility;

h1
	font-size 40px
	text-transform uppercase
h2
	font-size 32px
h3
	font-size 28px
h4
	font-size 24px
h5
	font-size 20px
h6
	font-size 16px

fieldset, img
	border 0

img, object
	vertical-align bottom


/** Lists **/

ol li
	list-style-type decimal
ul li
	list-style-type disc
ul ul li
	list-style-type circle
ol ol li
	list-style-type lower-alpha

nav ul,
nav ul li
	list-style none
	padding 0
	margin 0

strong,
em
	color darken($baseFontColor, 10)

a
	color #222
	text-decoration underline
	&:hover
	&:focus
		color #000
		text-decoration underline
	&:active
		outline none

#main-content a
	position relative
	margin -2px -4px
	padding 2px 4px
	border-radius 3px
	-webkit-transition color 0.3s ease, background-color 0.4s ease
	   -moz-transition color 0.3s ease, background-color 0.4s ease
	    -ms-transition color 0.3s ease, background-color 0.4s ease
	     -o-transition color 0.3s ease, background-color 0.4s ease
	        transition color 0.3s ease, background-color 0.4s ease
	&:hover
	&:focus
		color #000
		background-color $secondaryColor
		-webkit-transition all 0s ease
		   -moz-transition all 0s ease
		    -ms-transition all 0s ease
		     -o-transition all 0s ease
		        transition all 0s ease


code
	font-style normal
	font-family Monaco, Consolas, "Lucida Console", monospace
	font-size 13px
	line-height 25px
	background-color rgba(255,255,255,.5)
	margin -3px -6px
	padding 3px 6px
	border-radius 3px
	-webkit-transition all .2s ease
	   -moz-transition all .2s ease
	    -ms-transition all .2s ease
	     -o-transition all .2s ease
	        transition all .2s ease
	&:hover
		background-color rgba(255,255,255,.85)
	&:not(:hover)
		span
			color #777
			-webkit-transition color 1s ease
			   -moz-transition color 1s ease
			    -ms-transition color 1s ease
			     -o-transition color 1s ease
			        transition color 1s ease

pre
	background-color rgba(255,255,255,.5)
	padding 10px 16px
	margin-top -10px
	border-radius 3px
	-webkit-transition all .2s ease
	   -moz-transition all .2s ease
	    -ms-transition all .2s ease
	     -o-transition all .2s ease
	        transition all .2s ease
	code
		color #777
		border-radius 0
		background none
	&:hover
		background-color rgba(255,255,255,.85)
		span
			-webkit-transition color .2s ease
			   -moz-transition color .2s ease
			    -ms-transition color .2s ease
			     -o-transition color .2s ease
			        transition color .2s ease
		code
			background none
			color #222
	&:not(:hover)
		span
			color #777
			-webkit-transition color 1s ease
			   -moz-transition color 1s ease
			    -ms-transition color 1s ease
			     -o-transition color 1s ease
			        transition color 1s ease






